###############################################################################
# Module: homebin
# Description:
# 	Adds the user's ~/home/bin folder into PATH
###############################################################################

__homebin_dependencies=( 'mbe' )
__homebin_functions=( '_homebin_load' '_homebin_unload' '_homebin_setpath' '_homebin_usage' )

_homebin_load ()
{
	DEBUG echo "_homebin_load: enter"
	local module="homebin"

	# Load preferences
	
	# Configure module

	DEBUG echo "_homebin_load: leave"
}

_homebin_unload ()
{
	local func
	for func in "${__homebin_functions[@]}"; do
		unset "${func}"
	done
	return 0
}

_homebin_setpath ()
{
	# Add in the bin folder in my home directory
	if [ -e $HOME/bin ]; then
		PATH=$HOME/bin:$PATH
	fi
}

_homebin_usage ()
{
	echo "no usage info"
}
